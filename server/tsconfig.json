{
  "compilerOptions": {

    "target": "es5",

    "module": "commonjs",

    "lib": ["es6"],
    "outDir": "./server",
    "rootDir": "./server",
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },

  "include": ["server/**/*.ts"],

  "exclude": ["node_modules"],
}
